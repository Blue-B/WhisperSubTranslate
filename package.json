{
  "name": "whispersubtranslate",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron --expose-gc .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "GTPS Team",
  "license": "ISC",
  "description": "Whisper 기반 자막 추출·번역 도구 (Faster-Whisper)",
  "build": {
    "appId": "com.whispersubtranslate.app",
    "productName": "WhisperSubTranslate",
    "directories": {
      "output": "dist2"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "translator-enhanced.js",
      "myMemoryTranslator.js",
      "utils/**",
      "nya.wav"
    ],
    "extraResources": [
      { "from": "faster-whisper-xxl.exe", "to": "faster-whisper-xxl.exe" },
      { "from": "_xxl_data", "to": "_xxl_data" },
      { "from": "_models", "to": "_models" }
    ],
    "win": {
      "target": ["zip"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhisperSubTranslate"
    }
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "deepl-node": "^1.13.0"
  }
}
