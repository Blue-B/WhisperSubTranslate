{
  "name": "whispersubtranslate",
  "version": "1.3.2",
  "main": "main.js",
  "scripts": {
    "start": "electron --expose-gc .",
    "build": "electron-builder --publish never",
    "build-win": "electron-builder --win",
    "postinstall": "node scripts/postinstall.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "GTPS Team",
  "license": "GPL-3.0",
  "description": "Whisper 기반 자막 추출·번역 도구 (whisper.cpp)",
  "build": {
    "appId": "com.whispersubtranslate.app",
    "productName": "WhisperSubTranslate",
    "directories": {
      "output": "dist2"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "translator-enhanced.js",
      "myMemoryTranslator.js",
      "nya.wav"
    ],
    "extraResources": [
      {
        "from": "whisper-cpp",
        "to": "whisper-cpp"
      },
      {
        "from": "nya.wav",
        "to": "nya.wav"
      }
    ],
    "win": {
      "target": [
        "dir"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhisperSubTranslate"
    }
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "deepl-node": "^1.13.0",
    "ffmpeg-static": "^5.3.0"
  }
}
